<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">


        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivbackArrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_settings"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/ivlogout"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_15sdp"
                android:tint="#556080"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tlbarText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poiretone_regular"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llParant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_final" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poiretone_regular"
                android:gravity="center"
                android:text="Welcome"
                android:textColor="@color/white"
                android:textSize="@dimen/_36sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poiretone_regular"
                android:gravity="center"
                android:text="to iFaziG"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/tvTouchtoStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poiretone_regular"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Touch to Start"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCopyrights"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvcopyrights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/poiretone_regular"
                android:text="Powered by iFaziG "
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>


    </RelativeLayout>
</layout>