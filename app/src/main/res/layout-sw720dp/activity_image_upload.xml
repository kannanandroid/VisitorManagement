<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/ic_background"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivbackArrow"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="Smile Please"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />
            <ImageView
                android:id="@+id/ivRightArrow"
                android:layout_width="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_forwd"
                android:visibility="invisible"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivProImage"
                android:layout_gravity="center"
                android:src="@drawable/black_circle"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_minus40sdp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlRetake"
                    android:layout_width="@dimen/_45sdp"
                    android:background="@drawable/dark_circle"
                    android:visibility="gone"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_retake"
                        android:layout_width="@dimen/_35sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="@dimen/_35sdp"/>
                </RelativeLayout>
                <Space
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/rlCamera"
                    android:layout_width="@dimen/_30sdp"
                    android:background="@drawable/dark_circle"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_user"
                        android:layout_width="@dimen/_25sdp"
                        android:padding="@dimen/_3sdp"
                        android:layout_height="@dimen/_25sdp"/>
                </RelativeLayout>
                <Space
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:id="@+id/rl_Okay"
                    android:visibility="gone"
                    android:layout_width="@dimen/_45sdp"
                    android:background="@drawable/green_circle"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tick"
                        android:layout_width="@dimen/_35sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="@dimen/_35sdp"/>
                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:id="@+id/llCopyrights"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvcopyrights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:fontFamily="@font/poiretone_regular"
                android:text="Powered by iFaziG "
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </RelativeLayout>
</layout>